<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="FeatureAnalyzerPlugin.commands.category"
            name="Feature Analyzer">
      </category>
      <command
            categoryId="FeatureAnalyzerPlugin.commands.category"
            id="br.ufal.ic.featureanalyzerplugin.commands.FeatureAnalyzerCommand"
            name="Generate Interface">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="br.ufal.ic.featureanalyzer.handler.FeatureAnalyzerPluginHandler"
            commandId="br.ufal.ic.featureanalyzerplugin.commands.FeatureAnalyzerCommand">
      </handler>
   </extension>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="FeatureAnalyzer"
            id="FeatureAnalyzerPlugin">
      </category>
      <view
            name="Feature Analyzer"
            icon="icons/featured.png"
            category="FeatureAnalyzerPlugin"
            class="br.ufal.ic.featureanalyzer.views.PluginView"
            id="br.ufal.ic.featureanalyzer.views.PluginView">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               ratio="0.5"
               relative="org.eclipse.ui.views.ProblemView"
               relationship="right"
               id="br.ufal.ic.featureanalyzer.views.PluginView">
         </view>
      </perspectiveExtension>
   </extension>
    <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="br.ufal.ic.featureanalyzer.preferences.PreferencePage"
            id="br.ufal.ic.featureanalyzer.preferences.PreferencePage"
            name="Feature Analyzer">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="br.ufal.ic.featureanalyzer.preferences.Initializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="br.ufal.ic.typechefplugin.toolbars.sampleToolbar">
            <command
                  commandId="br.ufal.ic.featureanalyzerplugin.commands.FeatureAnalyzerCommand"
                  icon="icons/featured.png"
                  tooltip="Feature Analyzer"
                  id="br.ufal.ic.featureanalyzerplugin.toolbars.FeatureAnalyzerCommand">
            </command>
         </toolbar>
      </menuContribution>
   </extension>
</plugin>
